<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <include
        android:id="@+id/includePresetsBar"
        layout="@layout/app_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxHeight="500dp"
        app:layout_constraintBottom_toTopOf="@+id/adViewPreset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includePresetsBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/infoLayout"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/presetImg"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_weight="0.5"
                        android:contentDescription="@string/presetImageDescription"/>
                </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/presetNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:text="@string/infoWorkoutNameTitle"
                    android:textAlignment="center"
                    android:textColor="@color/AppColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/presetImg"
                    app:layout_constraintTop_toBottomOf="@+id/presetCategoryTxt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/categoryLbl"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/presetCategoryTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/createWorkoutDetailsDefault"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/presetCategory"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/presetWorkWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/workingModePreset"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoLayout" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/presetWorkingMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:text="@string/workoutModeTime"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/presetWorkWith" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/workoutModeReps"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/presetWorkingMode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/presetWorkingMode"
                app:layout_constraintTop_toTopOf="@+id/presetWorkingMode" />

            <TextView
                android:id="@+id/presetSetsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/infoNumSetsTitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/presetWorkingMode" />

            <ImageButton
                android:id="@+id/presetRemoveSetsBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:contentDescription="@string/removeSetsBtnDescription"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_removebtn"
                app:layout_constraintBottom_toBottomOf="@+id/presetSetsTxt"
                app:layout_constraintEnd_toStartOf="@+id/presetSetsTxt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/presetSetsTxt" />

            <TextView
                android:id="@+id/presetSetsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minWidth="60dp"
                android:text="@string/workoutNumSetsValueDefault"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@+id/presetAddSetsBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/presetRemoveSetsBtn"
                app:layout_constraintTop_toBottomOf="@+id/presetSetsTitle" />

            <ImageButton
                android:id="@+id/presetAddSetsBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:contentDescription="@string/addSetsBtnDescription"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_addbtn"
                app:layout_constraintBottom_toBottomOf="@+id/presetSetsTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/presetSetsTxt"
                app:layout_constraintTop_toTopOf="@+id/presetSetsTxt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/presetRepsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/presetSetsTxt">

                <TextView
                    android:id="@+id/presetReps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infoNumRepsTitle"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/presetRemoveRepsBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/removeRepsBtnDescription"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_removebtn"
                    app:layout_constraintBottom_toBottomOf="@+id/presetRepsTxt"
                    app:layout_constraintEnd_toStartOf="@+id/presetRepsTxt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/presetRepsTxt" />

                <TextView
                    android:id="@+id/presetRepsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minWidth="60dp"
                    android:text="@string/workoutNumRepsValueDefault"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@+id/presetAddRepsBtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/presetRemoveRepsBtn"
                    app:layout_constraintTop_toBottomOf="@+id/presetReps" />

                <ImageButton
                    android:id="@+id/presetAddRepsBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/addRepsBtnDescription"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_addbtn"
                    app:layout_constraintBottom_toBottomOf="@+id/presetRepsTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/presetRepsTxt"
                    app:layout_constraintTop_toTopOf="@+id/presetRepsTxt" />

                <TextView
                    android:id="@+id/presetWorkTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/infoNumRepsIntervalTitle"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/presetRepsTxt" />

                <ImageButton
                    android:id="@+id/presetRemoveIntervalBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/removeIntervalBtnDescription"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_removebtn"
                    app:layout_constraintBottom_toBottomOf="@+id/presetIntervalTxt"
                    app:layout_constraintEnd_toStartOf="@+id/presetIntervalTxt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/presetIntervalTxt" />

                <TextView
                    android:id="@+id/presetIntervalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minWidth="75dp"
                    android:text="@string/workoutIntervalValueDefault"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@+id/presetAddIntervalBtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/presetRemoveIntervalBtn"
                    app:layout_constraintTop_toBottomOf="@+id/presetWorkTitle" />

                <TextView
                    android:id="@+id/presetSecondsIntervalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workoutIntervalSecs"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/presetIntervalTxt" />

                <ImageButton
                    android:id="@+id/presetAddIntervalBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/addIntervalBtnDescription"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_addbtn"
                    app:layout_constraintBottom_toBottomOf="@+id/presetIntervalTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/presetIntervalTxt"
                    app:layout_constraintTop_toTopOf="@+id/presetIntervalTxt" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/presetWorkTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/presetRepsLayout">

                <TextView
                    android:id="@+id/presetWorkTimeTitle"
                    style="@style/workoutSubtitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workoutWorkTime"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <NumberPicker
                    android:id="@+id/workMinutesPreset"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:focusable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:theme="@style/AppTheme.Picker"
                    app:layout_constraintEnd_toStartOf="@+id/dotsWorkTimePreset"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/presetWorkTimeTitle" />

                <TextView
                    android:id="@+id/dotsWorkTimePreset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workoutDotsDivider"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/workMinutesPreset"
                    app:layout_constraintEnd_toStartOf="@+id/workSecondsPreset"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/workMinutesPreset"
                    app:layout_constraintTop_toTopOf="@+id/workMinutesPreset" />

                <NumberPicker
                    android:id="@+id/workSecondsPreset"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginStart="8dp"
                    android:focusable="false"
                    android:theme="@style/AppTheme.Picker"
                    android:descendantFocusability="blocksDescendants"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/dotsWorkTimePreset"
                    app:layout_constraintTop_toBottomOf="@+id/presetWorkTimeTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/presetRestTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/infoRestTimeTitle"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/presetWorkTimeLayout" />

            <NumberPicker
                android:id="@+id/restMinutesPreset"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:theme="@style/AppTheme.Picker"
                app:layout_constraintEnd_toStartOf="@+id/textView17"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/presetRestTimeTitle" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workoutDotsDivider"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/restMinutesPreset"
                app:layout_constraintEnd_toStartOf="@+id/restSecondsPreset"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/restMinutesPreset"
                app:layout_constraintTop_toTopOf="@+id/restMinutesPreset"
                app:layout_constraintVertical_bias="0.485" />

            <NumberPicker
                android:id="@+id/restSecondsPreset"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:theme="@style/AppTheme.Picker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/presetRestTimeTitle" />

            <LinearLayout
                android:id="@+id/saveNewPresetBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/save_btn_shape"
                android:clickable="true"
                android:contentDescription="@string/createSaveBtnDescription"
                android:elevation="5dp"
                android:focusable="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/saveStartNewPresetBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restSecondsPreset">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/createSaveBtnDescription"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_save_24" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:text="@string/createSaveBtnTxt"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saveStartNewPresetBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/save_btn_shape"
                android:clickable="true"
                android:contentDescription="@string/createStartSaveBtnDescription"
                android:elevation="5dp"
                android:focusable="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/saveNewPresetBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/saveNewPresetBtn"
                app:layout_constraintTop_toTopOf="@+id/saveNewPresetBtn">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/createStartSaveBtnDescription"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_play_arrow_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/createStartSaveBtnTxt"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2716842126108084/1053916279"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>