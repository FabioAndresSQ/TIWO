<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragments.PresetsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tutorialLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00181818"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true">

            <TextView
                android:id="@+id/startTutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shape"
                android:maxWidth="300dp"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="En esta pestaÃ±a encontraras mas de 1200 ejercicios preestablecidos para que los ajustes a tu gusto, tus propies series y tiempo de trabajo"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/continueTutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:textSize="16sp"
                android:textStyle="italic"
                android:padding="10dp"
                android:text="Toca para continuar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tutorialStepPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:alpha="0"
                android:background="@drawable/rounded_shape"
                android:maxWidth="300dp"
                android:padding="10dp"
                android:text="Aqui podras buscar todos los ejercicios que practicas (recuerda que esta funcion esta disponible solo en ingles por el momento)"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/topArrowRight"
                android:alpha="0"
                android:src="@drawable/baseline_arrow_drop_up_24"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/tutorialStepPager"
                app:layout_constraintEnd_toEndOf="@+id/tutorialStepPager"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="-17dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/topArrowLeft"
                android:alpha="0"
                android:src="@drawable/baseline_arrow_drop_up_24"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/tutorialStepPager"
                app:layout_constraintStart_toStartOf="@+id/tutorialStepPager"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="-17dp"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tutorialLayoutBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AB181818"
                android:clickable="false"
                android:elevation="-1dp"
                android:focusable="false"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="100dp"
            android:id="@+id/presetsEmptyLayout"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollCategory">

            <ImageView
                android:id="@+id/emptyResultImg"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/searching"
                android:scaleType="fitCenter"
                tools:ignore="contentDescription"/>

            <TextView
                android:id="@+id/emptyResultTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchByWorkoutOrCategory"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingBar"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/scrollCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Search Workout Preset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/searchPreset"
            android:background="@drawable/rounded_corner"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:iconifiedByDefault="false"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchPreset"
            android:orientation="horizontal"
            android:id="@+id/scrollCategory"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:id="@+id/chestPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/chestCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/backPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/backCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/upperArmsPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/upperArmsCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/lowerArmsPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/lowerArmsCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/upperLegsPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/upperLegsCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/lowerLegsPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/lowerLegsCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/absPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/absCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/shoulderPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/shoulderCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/cardioPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/cardioCategoryTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_margin="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/neckPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/categoryNeckTxt"
                    android:background="@drawable/preset_menu_btn_shape"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:elevation="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rvPresets"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollCategory"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>